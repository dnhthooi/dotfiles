set nocompatible

filetype indent on

syntax on

set ruler
set textwidth=120
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

set number

set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch

set backupdir=~/.vim/tmp/
set directory=~/.vim/tmp/
set undodir=~/.vim/tmp/
